/* pages/personComponent/evaluate/evaluate.wxss */
@import '/iconfont/stylesheet.wxss';

.evaluate{
   width: 100%; 
  /* height: 100vh; */
  background: #F2f2f2;
  margin: 0;
  padding: 0;
  overflow: hidden;
}
.userMsg{
  width: 100%;
  height: 222rpx;
  background-color: #fed555;
  display: flex;
  flex-direction: row;
}
.user-avatar{
  width: 34%; 
  height: 100%;
}
.user-avatar image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50px;
  border: 5px solid #fff;
  display: block;
  margin-top: 20rpx;
  margin-left: 52rpx;
}
.user-msg{
    width: 60%;  
    padding: 50rpx 0;
    font-size: 30rpx;
}
.user-msg text{
    display: block; 
    padding: 8rpx;
    letter-spacing: 3rpx;
}
.container{
  /* width: 100%; */
   /* height: 100vh;  */
  background: #F2f2f2;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  overflow:hidden;
}
.prints{
  width:749rpx;
}
.print-item{
  flex-grow: 1;
  /* min-height:480rpx; */
  background: #fff;
  display: block;
  margin-bottom: 20rpx;
  /* max-height: 610rpx; */
}
.print-title{
  display: flex;
  width: 749rpx;
  height:112rpx;
  border-bottom: 1px solid #f1f1f1;
  line-height: 112rpx;
  color: #898989;
  position: relative;
}
.product_name{
  padding-left:37rpx;
  font-size: 35rpx;
}
.arrow{
  position: absolute;
  right: 10rpx;
  text-align: center;
}
.arrow:after{
  font-size: 50rpx; 
  content: '\e649';
  font-family: 'iconfont';
}
.print-title image{
  width: 71rpx;
  height: 57rpx;
  position: absolute;
  top: 29rpx;
}
.print-title image:last-child{
  right: 16rpx;
}
.print-title image:first-child{
  /* padding-left: 65rpx; */
  left:54rpx;
}
.print-content{
  width: 749rpx;
  display: flex;
  padding-top: 40rpx;
}
.content{
   display: flex;
  width: 749rpx;
  margin-right:0;
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
 -webkit-transform: translateX(127px);
 transform: translateX(127px);
 margin-left: -127px;
}
.print-spot{
  flex: 1;
  /* margin-left: 37rpx; */
}
.print-desc{
  width: 72%;
  /* flex: 4; */
   padding-right: 33rpx;   
}
.print-spot image{
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  display: block;
  border-radius: 50%;
}
.grade{
  font-size: 29rpx;
}
.grade .time{
  color: red;
  float: right;
  padding-right: 10rpx;
}
.fiveStars{
  width: 208rpx;
  height: 40rpx;
  position: relative;
  display: inline-block;
  vertical-align: middle;
}
.sortLabel{
  font-size: 29rpx;
}
.star-image {
  position: absolute;
  width: 37rpx;
  height:43rpx;
  src: "../../../image/allstar.png";
}

.item {
  position: absolute;
  top: 1rpx;
  width:15rpx;
  height: 36rpx;
}
.item:first-child{
  left: 3rpx;
}
.item:last-child{
  left:20rpx;
}
.spotDesc{
  /* width: 94%; */
  color: #ababab;
  font-size: 29rpx;
  display: block;
   padding:20rpx 0 20rpx 0; 
  line-height: 25px;
  overflow: auto;
  word-break: break-all;
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:4; 
  text-indent:2em;
}
.user_comment_item_img image{
	width:270rpx;
	height: 240rpx;
	margin-right: 15rpx;
}
.imgScroll{
	white-space: nowrap;
}
