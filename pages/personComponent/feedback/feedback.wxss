/* pages/personComponent/feedback/feedback.wxss */
@import '../../../iconfont/stylesheet.wxss';
.feedBack{
  width: 100%;
  height: 100vh;
  background: #fff;
}
.images-wrapper{
  padding: 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.images-wrapper-text{
  font-size: 28rpx;
}
.images-list{
  display: flex;
  margin-top: 20rpx;
  flex-wrap: wrap;
}
.images-image{
  width: 170rpx;
  height: 150rpx;
  margin: 10rpx;
  border-radius: 15rpx;
   text-align: center; 
   line-height:109rpx; 
  position: relative;
}
.images-image-plus{
  border: 1px solid #999;
}
.feedText{
  width: 94%;
  padding: 20rpx;
  white-space: pre-wrap;
  word-wrap: break-word;
}
.images-image:after{
  font-family: 'iconfont';
  font-weight: bold;
  font-style: normal;
  content: '\e606';
  color: #b5b5b7;
  font-size: 70rpx;
}
.send{
  width: 92%;
  background: #fed555;
}
.add{
  width: 100%;
  left:0; 
  position: absolute;
  bottom:-11rpx;
  color: #b5b5b7;
  font-size: 26rpx;
}