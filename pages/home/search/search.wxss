/* pages/home/search/search.wxss */
.searchPage{
	position:fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	background: rgba(255, 255, 255, .9);
	z-index: 10;
}
.searchPage .search input{
	width: 380rpx;
}
.searchPage .search{
	background:#333;
}
.searchPage .cancelSearch{
	width: 100rpx;
	height: 80rpx;
	line-height: 80rpx;
	margin-right: 40rpx;
	text-align: center;
}
.searchPage .searchMain{
	background: white;
}
.searchPage .searchMain>view:first-child{
	height: 120rpx;
	box-shadow: 0px 2px 2px 2px #e9e8e9;
}
.searchPage .searchItem{
	color: black;
	border-bottom: 1px solid #efefef;
	line-height: 80rpx;
	padding:0rpx 40rpx;
}