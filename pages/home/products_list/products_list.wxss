/* pages/common/pages/products_list/products_list.wxss */
@import "../../common/wxss/comWxss.wxss";
/*更多按钮时的样式*/
.pro_list {
	width: 700rpx;
	margin: 0 auto;
	padding: 30rpx 0rpx 70rpx ;
}
.pro_list .a_pro{
	padding-bottom:15rpx;
	border-bottom:1px solid #f4f4f6;
	margin-bottom: 40rpx;
}
.pro_list .a_pro:last-child{
	border-bottom:none;
}
.pro_list .a_pro>image{
	width: 100%;
	height: 450rpx;
}
.pro_list .a_pro .pro_name{
	font-size: 32rpx;
	color: #2370af;
	line-height: 60rpx;
}
.pro_list .a_pro .pro_name>text{
	width: 50%;
}
.pro_list .a_pro .pro_name>text:last-child{
	text-align: right;
	color: #cc5b5f;
	font-size: 26rpx;
}
.pro_list .a_pro .pro_place{
	color: #acacac;
	font-size: 30rpx;
}
.no_data{
	text-align: center;
	font-size: 32rpx;
	color: #acacac;
	line-height: 100rpx;
}