.loginOrigister{
  width: 100%;
  height: 100vh;
  padding: 0;
  margin: 0;
  display: flex;
}
.bg,.mask{
  width: 100%;
  height: 100%;
}
.mask{
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999999;
}
.logo{
  width: 60%;
  height: 160rpx;
  position: absolute;
  top: 200rpx;
  left: 50%;
  margin-left: -30%;
}
button{
  left: 7%;
  width: 86%;
  position: absolute;
  margin: 0 auto;
  background: #ffd102;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
}
button.register{
  bottom:206rpx;
}
button.login{
  bottom: 200rpx;
}
.choice{
   width: 100%;
  height: 200rpx;
  display: flex;
  background: #fff;
}